<% include partials/header.ejs %>

<div class="ui main container segment">
    <div class="ui huge header">Edit Blog</div>
    
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name= "blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name= "blog[image]" placeholder="image" value="<%=blog.image  %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea type="text" name= "blog[body]" placeholder="body" ><%=blog.body  %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit"></input>
        
        
    </form>
    
    
</div><!-- container -->


<% include partials/footer.ejs %>