
<% include partials/header.ejs %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
          <% blogs.forEach(function(blog){ %>
          <div class="item">
              <div class="image">
                <img width="500px" src="<%= blog.image %>">                  
              </div><!-- image -->
              <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                       <span><%= blog.created.toDateString() %></span> 
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0,1000)%>...</p>                        
                    </div>
                    <div class="extra">
                        <a class="ui floated violet basic button" href="/blogs/<%= blog._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>    
                    </div><!-- extra -->
              </div><!-- content -->
          </div><!-- item -->





        <% }); %> 
            
        </div>
        
    </div>




</div>
<% include partials/footer.ejs %>